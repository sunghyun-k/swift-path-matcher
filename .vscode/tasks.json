{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Swift: Build",
      "type": "shell",
      "command": "swift",
      "args": ["build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$swiftc"]
    },
    {
      "label": "Swift: Test",
      "type": "shell",
      "command": "swift",
      "args": ["test"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": ["$swiftc"]
    },
    {
      "label": "Swift: Test (Verbose)",
      "type": "shell",
      "command": "swift",
      "args": ["test", "--verbose"],
      "problemMatcher": ["$swiftc"]
    },
    {
      "label": "Swift: Clean",
      "type": "shell",
      "command": "swift",
      "args": ["package", "clean"],
      "problemMatcher": []
    }
  ]
}
